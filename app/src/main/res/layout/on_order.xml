            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#E3E3E3" />

            <GridLayout
                android:id="@+id/open_promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/only_rounded"
                android:backgroundTint="@color/white"
                android:columnCount="8"
                android:padding="16dp"
                android:rowCount="1">

                <ImageView
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_discount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="6"
                    android:fontFamily="@font/sora_semibold"
                    android:text="1 Discount is Applies"
                    android:textColor="@color/black" />

                <ImageView
                    android:padding="4dp"
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_arrow_right" />

            </GridLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/delivery_group">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sora_bold"
                    android:text="Payment Summary"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:ignore="HardcodedText" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:rowCount="2">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:columnCount="2"
                        android:rowCount="1"
                        android:layout_marginTop="16dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/sora_regular"
                            android:text="Price"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/total_amount"
                            android:textAlignment="textEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/sora_semibold"
                            android:text="$ 4.53"
                            android:textColor="@color/black" />
                    </GridLayout>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:columnCount="2"
                        android:rowCount="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:fontFamily="@font/sora_regular"
                            android:text="Delivery Fee"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:gravity="end"

                            >
                            <TextView
                                android:id="@+id/og_fee"
                                android:textAlignment="textEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:fontFamily="@font/sora_regular"
                                android:background="@drawable/line_through"
                                android:text="$ 1.0"
                                android:layout_marginEnd="8dp"
                                android:textColor="#A2A2A2" />
                            <TextView
                                android:id="@+id/pro_fee"
                                android:textAlignment="textEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/sora_semibold"
                                android:text="$ 1.0"
                                android:textColor="@color/black" />
                        </LinearLayout>
